{
	"name": "amir-ben-shimol",
	"description": "Amir Ben Shimol Website",
	"version": "1.0.0",
	"license": "UNLICENSED",
	"private": true,
	"type": "module",
	"author": "Amir Ben Shimol <amir.benshi@gmail.com> (https://amirbenshimol.io)",
	"scripts": {
		"husky": "husky",
		"setdev": "run-p husky",
		"prepare": "pnpm setdev",
		"postbuild": "pnpm run sitemap",
		"export": "next export",
		"sitemap": "next-sitemap --config next-sitemap.config.cjs",
		"build": "dotenv -e envs/.env.production -- next build",
		"start": "dotenv -e envs/.env.production -- next start -p 8080",
		"start:dev": "dotenv -e envs/.env.development -- next dev -p 8080",
		"start:prod": "next start -p 80",
		"type-check": "tsc --project ./tsconfig.json",
		"lint": "eslint -c ./.eslintrc.cjs --ignore-path ./.eslintignore \"./**/*.{ts,tsx,cjs}\"",
		"knip": "knip -c ./knip.json",
		"inflint": "inflint -c ./inflint.config.cjs",
		"prettier": "prettier --check **/*.{ts,js,cjs,json,yaml}",
		"check:all": "run-s type-check lint knip inflint prettier"
	},
	"dependencies": {
		"@radix-ui/react-hover-card": "1.1.1",
		"@react-three/drei": "9.109.5",
		"@react-three/fiber": "8.17.5",
		"@tailwindcss/typography": "0.5.14",
		"@types/three": "0.167.1",
		"clsx": "2.1.1",
		"framer-motion": "11.2.9",
		"next": "14.2.5",
		"next-sitemap": "4.2.3",
		"next-themes": "0.3.0",
		"nextjs-toploader": "1.6.12",
		"qss": "3.0.0",
		"react": "18.3.1",
		"react-syntax-highlighter": "15.5.0",
		"remark": "15.0.1",
		"remark-gfm": "4.0.0",
		"sharp": "0.33.5",
		"tailwind-merge": "2.3.0",
		"tailwindcss-animate": "1.0.7",
		"three": "0.167.1",
		"three-globe": "2.31.1"
	},
	"devDependencies": {
		"@exlint.io/inflint": "2.1.1",
		"@mdx-js/loader": "3.0.1",
		"@mdx-js/react": "3.0.1",
		"@next/mdx": "14.2.5",
		"@types/mdx": "2.0.13",
		"@types/node": "20.12.13",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"@types/react-syntax-highlighter": "15.5.13",
		"@typescript-eslint/eslint-plugin": "7.17.0",
		"@typescript-eslint/parser": "7.17.0",
		"autoprefixer": "10.4.19",
		"dotenv-cli": "7.4.2",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-deprecation": "3.0.0",
		"eslint-plugin-i18next": "6.0.9",
		"eslint-plugin-import": "2.29.1",
		"eslint-plugin-jsx-a11y": "6.9.0",
		"eslint-plugin-react": "7.32.2",
		"eslint-plugin-react-hooks": "4.6.2",
		"eslint-plugin-unicorn": "54.0.0",
		"eslint-plugin-unused-imports": "4.0.1",
		"husky": "9.0.11",
		"hygen": "6.2.11",
		"knip": "5.23.1",
		"lint-staged": "15.2.7",
		"npm-run-all2": "6.2.2",
		"postcss": "8.4.38",
		"postcss-import": "16.0.1",
		"postcss-nesting": "12.1.5",
		"prettier": "3.3.3",
		"prettier-plugin-tailwindcss": "0.6.6",
		"rehype-raw": "7.0.0",
		"tailwindcss": "3.4.9",
		"typescript": "5.4.5"
	},
	"packageManager": "pnpm@9.6.0",
	"engines": {
		"npm": "please-use-pnpm",
		"yarn": "please-use-pnpm",
		"pnpm": ">=9",
		"node": ">=20"
	}
}
